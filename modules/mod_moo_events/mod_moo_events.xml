<?xml version="1.0" encoding="utf-8"?>
<extension
    type="module"
    version="2.5"
    client="site"
    method="upgrade">
    <name>Moo Events Reel</name>
    <author>Dan Mooney</author>
    <creationDate>October 2012</creationDate>
    <copyright>Copyright (C) 2013 DanRonMoon</copyright>
    <authorEmail>dan.r.mooney@gmail.com</authorEmail>
    <authorUrl>www.danronmoon.com</authorUrl>
    <description>List events or news in a reel fashion</description>
    <files>
    </files>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="header" type="text" label="Header Text" description="The header text that appears above the reel" />
                <field name="reel-subject" type="radio" default="news" label="Reel subject">
                    <option value="news">News</option>
					<option value="events">Events</option>
                </field>
                <field name="reel-type" type="radio" default="detailed" label="Reel display type">
                    <option value="detailed">Detailed</option>
                    <option value="general">General</option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>
