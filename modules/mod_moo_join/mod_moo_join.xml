<?xml version="1.0" encoding="utf-8"?>
<extension
    type="module"
    version="2.5"
    client="site"
    method="upgrade">
    <name>Moo Join Form</name>
    <author>Dan Mooney</author>
    <creationDate>February 2013</creationDate>
    <copyright>Copyright (C) 2013 DanRonMoon</copyright>
    <authorEmail>dan.r.mooney@gmail.com</authorEmail>
    <authorUrl>www.danronmoon.com</authorUrl>
    <description>Join Form</description>
    <files>
    </files>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="text" type="textarea"  size="100" default="" label="Text" description="Text to display before displaying form" />
                <field name="email_to" type="text" size="100" default="" label="To E-Mail" description="E-Mail to send the form to (use commas for multiple addresses)" />
                <field name="subject" type="text"  size="100" default="" label="Subject" description="Subject line for E-Mail" />
                <field name="thank_you" type="textarea" size="100" default="" label="Thank You Text" description="Text to display for successful contact form submission" />
            </fieldset>
        </fields>
    </config>
</extension>
